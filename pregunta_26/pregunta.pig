*/
lines = LOAD 'data.csv' USING PigStorage(',')
    AS (
            f1:int,
            f2:chararray,
            f3:chararray,
            f4:chararray,
            f5:chararray,
            f6:int
    );

B = FOREACH lines GENERATE f2 AS (nombre:chararray);
C = FILTER B BY STARTSWITH (nombre,'M') OR STARTSWITH (nombre,'Z') OR STARTSWITH (nombre,'R') OR STARTSWITH (nombre,'V');

STORE C INTO 'output';
